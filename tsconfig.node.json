{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "vite.config.*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "verbatimModuleSyntax": false,
    "target": "ESNext",
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "noImplicitAny": false,
    "noImplicitThis": true,
    "lib": [
      "ESNext",
      "DOM",
      "ESNext.String"
    ]
  }
}
